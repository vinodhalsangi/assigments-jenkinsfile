pipeline {
  agent {
    label {
        label "built-in"
        customWorkspace "/mnt/project/"
    }
  }
  stages {
    stage ("clear ws") {
      steps {
        sh "sudo rm -rf 24-q3"
      }
    }
    stage ("git clone branch") {
      steps {
        sh "sudo git clone https://github.com/vinodhalsangi/assigments-jenkinsfile.git 24-q3 -b 24-q3"
      }
    }
    stage (permission){
        steps {
            sh "sudo chmod -R 777 *"
        }
    }
    stage ("deploy on server") {
      steps {
        sh "sudo scp -i /mnt/key-pair/devops-kp.pem /mnt/project/24-q3/index.html ec2-user@13.233.156.12:/var/www/html/"
      }
    }
  }
}
